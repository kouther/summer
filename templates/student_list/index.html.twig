{% extends 'base.html.twig' %}

{% block body %}

	<div class="main-content">
		<div class="page-content">
			<div class="container-fluid">

				<div class="row">
					<div class="col-lg-12">
						<div class="card">
							<div class="card-header">
								<h4 class="card-title mb-0">Tunisia Summer Program Student</h4>
							</div>
							<div class="card-body">
								<div class="row">
									<div class="table-responsive">
										<table class="table align-middle table-nowrap mb-0" id="example">
											<thead class="table-light">
												<tr>
													<th class="align-middle">Name</th>
													<th class="align-middle">Lastname</th>
													<th class="align-middle">Email</th>
													<th class="align-middle">phone</th>
													<th class="align-middle">University</th>
													<th class="align-middle">Intersrt course</th>
													<th class="align-middle">Payment date</th>
													<th class="align-middle">Payment receipt</th>
													<th class="align-middle">Receipt number</th>
													<th class="align-middle">Action</th>



												</tr>
											</thead>
											<tbody>
												{% for student in students %}
    {% if 'ROLE_STUDENT' in student.roles %}
													<tr>
														<td>{{student.firstname}}</td>
														<td>{{student.lastname}}</td>
														<td>{{student.email}}</td>
														<td>{{student.phone}}</td>
														<td>{{student.getUniversityName()}}</td>
														<td>
															{% for course in student.getInteresrtCourse() %}
																{{course}}<br>
															{% endfor %}
														</td>
														<td>
															{% if student.payment is not null %}
																<a href="/public/uploads/{{student.payment}}">download</a>

															{% endif %}
														</td>
														<td>{{student.getPaymentDate()|date("m/d/Y")}}</td>
														<td>{{student.getPaymentId()}}</td>
														<td>
														<a class="dropdown-item" href="{{ path('app_validate', {id: student.id}) }}">
														<i class="mdi mdi-progress-check text-muted font-size-16 align-middle me-1"></i>
														<span class="align-middle">Confirm</span>
													   </a>
													   </td>
													

{% endif %}
													{% endfor %}
												</tbody>
											</tbody>
										</table>
										<!-- end table -->
									</div>
									<!-- end table responsive -->
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
